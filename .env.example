NODE_ENV=development

# ── Gateway settings ──────────────────────────────────────────
# Port the gateway listens on
PORT=4020

# Upstream API to protect (all non-gateway requests are proxied here)
GATEWAY_UPSTREAM=http://localhost:3000

# Your Neutaro wallet address that receives NTMPI payments (REQUIRED)
GATEWAY_PAYMENT_ADDRESS=neutaro1your-wallet-address-here

# Default price per API request in NTMPI
GATEWAY_DEFAULT_PRICE=0.001

# Route-specific pricing: pattern=price,pattern=price
# GATEWAY_ROUTES=/api/expensive/*=1.0,/api/cheap/*=0.0001

# Neutaro REST (LCD) endpoint for on-chain verification
GATEWAY_REST=https://api2.neutaro.io

# Minimum block confirmations before accepting a payment
GATEWAY_MIN_CONFIRMATIONS=1

# Invoice validity in seconds (default 5 minutes)
GATEWAY_INVOICE_TTL=300

# Enable prepaid balance deposits (true/false)
GATEWAY_PREPAID=false

# SQLite database path for invoices and prepaid balances
GATEWAY_DB=./gateway.db

# ── Management API ────────────────────────────────────────────
# JWT secret for management API authentication
JWT_SECRET=replace-with-a-strong-random-secret
