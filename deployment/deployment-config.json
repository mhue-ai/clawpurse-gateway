{
  "version": "0.1.0",
  "environment": {
    "development": {
      "replicas": 1,
      "resources": {
        "cpu": "100m",
        "memory": "256Mi"
      }
    },
    "staging": {
      "replicas": 2,
      "resources": {
        "cpu": "250m",
        "memory": "512Mi"
      }
    },
    "production": {
      "replicas": 3,
      "resources": {
        "cpu": "500m",
        "memory": "1Gi"
      }
    }
  },
  "monitoring": {
    "enabled": true,
    "alertThresholds": {
      "cpu": 80,
      "memory": 85,
      "errorRate": 0.05
    }
  }
}
